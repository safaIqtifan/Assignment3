<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".EmailDetails">

    <TextView
        android:id="@+id/letterEmail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32sp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ring"
        android:gravity="center"
        android:text="e"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/nameEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sam"
        android:textColor="#706B6B"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Weekend adventure"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="5"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Lets go fishing with Johan and other. We Will do something \nLets go fishing with Johan and other. We Will do something \nLets go fishing with Johan and other. We Will do something\nLets go fishing with Johan and other. We Will do something " />

</LinearLayout>